<!DOCTYPE html>
<html>
    <head>
        <title>{{cuisine.getCuisine}}</title>
        <meta charset="utf-8">
    </head>
    <body>
        <a href="/"><button type="button" name="button">Home</button></a>
        <form action="/add_restaurant/{{cuisine.getId}}" method="post">
            <label for="name">Restaurant Name</label>
            <input type="text" name="name"><br>
            <label for="price">Price</label>
            <select name="price">
                <option value="1">$</option>
                <option value="2">$$</option>
                <option value="3">$$$</option>
                <option value="4">$$$$</option>
            </select><br>
            <button type="submit" name="button">Add Restaurant</button>
        </form>
        <h3>{{cuisine.getCuisine}}</h3>
        <ul>
        {% for restaurant in restaurants %}
            <li>{{restaurant.getRestaurantName}}</li>
        {% endfor %}
    </ul>

    </body>
</html>
